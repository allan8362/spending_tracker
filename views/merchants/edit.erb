<h3>Edit</h3>

<form class="grid-row" action="/merchants/<%= @merchant.id %>" method="POST">

<label for="merchant-name">Merchant Name:</label>
<input required type="text" id="merchant-name" name="name" value="<%= @merchant.name %>">

<label for="merchant-tag">Default Category</label>
<input type="text" id="merchant-tag" name="tag" value="<%= @merchant.tag %>">

<input class="btn--add btn--sm" type="submit" value="Update">

</form>

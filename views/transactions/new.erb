<h3>Add New Transaction</h3>

<form action="/transactions" method="POST">

  <label for="bank-account">Bank Account</label>
  <select id="bank-account" name="bank_id">
    <% for bank in @banks %>
      <option value="<%= bank.id %>">
        <%= bank.name %>
      </option>
    <% end %>
  </select>

  <label for="trans-date">Date</label>
  <input type="date" id ="trans-date" name="transaction_date">

  <label for="trans-amount">Amount</label>
  <input type="number" step ="0.01" id="trans-amount" name="amount">

  <label for="merchant">Merchant</label>
  <select name="merchant_id" id="merchant">
    <%  for merchant in @merchants %>
      <option value="<%= merchant.id %>">
        <%= merchant.name %>
      </option>
    <% end %>
  </select>

  <label for="expense_category">Category</label>
  <select name="expense_id" id="expense_category">
    <% for expense in @expenses %>
      <option value="<%= expense.id %>">
        <%= expense.name %>
      </option>
    <% end %>
  </select>

  <label for="trans-desc">Description</label>
  <input type="text" id="trans-desc" name="transaction_desc">

  <input type="submit" value="Add">

</form>

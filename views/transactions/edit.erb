<h3>Edit</h3>

<form action="/transactions/<%= @transaction.id %>" method="POST">

  <label for="bank-account">Bank Account</label>
  <select id="bank-account" name="bank_id">
    <% for bank in @banks %>
      <option <%= "selected" if @transaction.bank_id == bank.id %> value="<%= bank.id %>">
        <%= bank.name %>
      </option>
    <% end %>
  </select>

  <label for="trans-date">Date</label>
  <input required type="date" id ="trans-date" name="transaction_date" value="<%= @transaction.transaction_date %>">

  <label for="trans-amount">Amount</label>
  <input required type="number" step ="0.01" id="trans-amount" name="amount" value="<%= '%.2f' % @transaction.amount %>">

  <label for="merchant">Merchant</label>
  <select name="merchant_id" id="merchant">
    <% for merchant in @merchants %>
      <option <%= "selected" if @transaction.merchant_id == merchant.id %> value="<%= merchant.id %>">
        <%= merchant.name %>
      </option>
    <% end %>
  </select>

  <label for="expense_category">Category</label>
  <select name="expense_id" id="expense_category">
    <% for expense in @expenses %>
      <option <%= "selected" if @transaction.expense_id == expense.id %> value="<%= expense.id %>">
        <%= expense.name %>
      </option>
    <% end %>
  </select>

  <label for="trans-desc">Description</label>
  <input type="text" id="trans-desc" name="transaction_desc" value="<%= @transaction.transaction_desc %>">

  <input type="submit" value="Update">




</form>

<h3>Add New Bank Account</h3>

<form class="grid-row" action="/banks" method="POST">

<label for="acct-no">Account number</label>
<input required type="number" id="acct-no" name="account_number">

<label for="acct-name">Account name</label>
<input required type="text" id="acct-name" name="name">

<label for="acct-type">Account type</label>
<input required type="text" id="acct-type" name="type">

<label for="acct-balance">Opening Balance</label>
<input type="number" step ="0.01" id="acct-balance" name="balance">

<input class="btn--add btn--sm" type="submit" value="Add account">

</form>

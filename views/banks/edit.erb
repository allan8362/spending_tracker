<h3>Edit</h3>

<form action="/banks/<%= @bank.id %>" method="POST">

  <label for="acct-no">Account number</label>
  <input type="number" id="acct-no" name="account_number" value="<%= @bank.account_number %>">

  <label for="acct-name">Account name</label>
  <input type="text" id="acct-name" name="name" value="<%= @bank.name %>">

  <label for="acct-type">Account type</label>
  <input type="text" id="acct-type" name="type" value="<%= @bank.type %>">

  <label for="acct-balance">Balance</label>
  <input type="number" step ="0.01" id="acct-balance" name="balance" value="<%= @bank.balance %>">

  <input type="submit" value="Update">

</form>

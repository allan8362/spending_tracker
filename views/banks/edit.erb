<h3>Edit</h3>

<form class="grid-row" action="/banks/<%= @bank.id %>" method="POST">

  <label for="acct-no">Account number</label>
  <input required type="number" id="acct-no" name="account_number" value="<%= @bank.account_number %>">

  <label for="acct-name">Account name</label>
  <input required type="text" id="acct-name" name="name" value="<%= @bank.name %>">

  <label for="acct-type">Account type</label>
  <input required type="text" id="acct-type" name="type" value="<%= @bank.type %>">

  <label for="acct-balance">Balance</label>
  <input type="number" step ="0.01" id="acct-balance" name="balance" value="<%= '%.2f' % @bank.balance %>">

  <input class="btn--add btn--sm" type="submit" value="Update">

</form>
